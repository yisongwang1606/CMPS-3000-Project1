<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zb.mapper.UserMapper">


    <resultMap id="userResultMap" type="com.zb.entity.User">
    </resultMap>


    <select id="login" resultMap="userResultMap">
        select * from user_account
        <where>
            username = #{username} AND password = #{password}
        </where>
    </select>

    <select id="findUser" resultMap="userResultMap">
        select * from user_account
        <where>
            username = #{username}
        </where>
    </select>

    <update id="buyItems">
        update user_account
        <set>
            balance = #{balance}
        </set>
        <where>
            username = #{username}
        </where>
    </update>
</mapper>